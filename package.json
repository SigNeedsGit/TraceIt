{
  "name": "traceit",
  "version": "1.0.0",
  "description": "TraceIt by Sig - Transparent image overlay for tracing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win"
  },
  "author": "Sig",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.sig.traceit",
    "productName": "TraceIt",
    "directories": { "output": "dist" },
    "files": ["main.js", "preload.js", "renderer/**/*", "assets/**/*"],
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] },
        { "target": "portable", "arch": ["x64"] }
      ]
    },
    "portable": { "artifactName": "TraceIt-Portable.exe" },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "artifactName": "TraceIt-Setup.exe",
      "shortcutName": "TraceIt"
    }
  }
}
